{
	// VIM KEYBINDINGS
	"vim.vimrc.enable": true,
	"vim.vimrc.path": "$HOME/.vimrc",
	"vim.leader": "<space>",
	"vim.foldfix": true,
	"vim.normalModeKeyBindings": [
		{
			"before": ["<leader>", "<leader>"],
			"commands": ["workbench.action.showCommands"]
		},
		{
			"before": ["<Leader>", "s"],
			"commands": ["workbench.action.gotoSymbol"]
		},
		{
			"before": ["<Leader>", "r"],
			"commands": ["editor.action.rename"]
		},
		{
			"before": ["shift", 5],
			"commands": ["editor.emmet.action.matchTag"]
		},
		{
			"before": ["<leader>", "p"],
			"commands": ["editor.action.peekDefinition"],
			"when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
		},
		{
			"before": ["<leader>", "f"],
			"commands": ["editor.toggleFold"],
			"when": "editorTextFocus && foldingEnabled"
		},
		{
			"before": ["<leader>", "g", "d"],
			"commands": ["editor.action.revealDefinition"],
			"when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
		}
	],
	"vim.visualModeKeyBindingsNonRecursive": [
		{
			"before": [">"],
			"commands": ["editor.action.indentLines"]
		},
		{
			"before": ["<"],
			"commands": ["editor.action.outdentLines"]
		},
		{
			"before": ["<leader>", "<leader>"],
			"commands": ["workbench.action.showCommands"]
		},
		{
			"before": ["<leader>", "w"],
			"commands": ["editor.emmet.action.wrapWithAbbreviation"]
		},
		{
			"before": ["shift", 5],
			"after": ["editor.emmet.action.selectNextItem"]
		}
	],

	// Tab spaces
	"[sass]": {
		"editor.tabSize": 2
	},
	"[css]": {
		"editor.tabSize": 2
	},
	"[html]": {
		"editor.tabSize": 2
	},
	"[javascript]": {
		"editor.tabSize": 2
	},
	"[typescript]": {
		"editor.tabSize": 2
	},
	"[JavaScript React]": {
		"editor.tabSize": 2
	},

	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"keyboard.dispatch": "keyCode",
	"prettier.useTabs": true,
	"liveServer.settings.donotShowInfoMsg": true,
	"explorer.confirmDelete": false,
	"editor.suggestSelection": "first",
	"files.exclude": {
		"**/.classpath": true,
		"**/.project": true,
		"**/.settings": true,
		"**/.factorypath": true
	},
	"files.trimTrailingWhitespace": true,
	"[markdown]": {
		"files.trimTrailingWhitespace": false
	},
	"workbench.iconTheme": "material-icon-theme",
	"git.autofetch": true,
	"window.menuBarVisibility": "toggle",
	"editor.minimap.enabled": false,
	"liveServer.settings.donotVerifyTags": true,
	"editor.bracketPairColorization.enabled": true,
	"vim.camelCaseMotion.enable": true,
	"code-runner.clearPreviousOutput": true,
	"editor.fontFamily": "'DejaVu Sans Mono'",
	"workbench.tree.indent": 15,
	"editor.formatOnSave": true,
	"diffEditor.ignoreTrimWhitespace": false,
	"vim.cursorStylePerMode.insert": "line-thin",
	"vim.cursorStylePerMode.normal": "block",
	"editor.wordWrap": "off",
	"workbench.colorTheme": "Gruvbox Dark Medium",
	// https://github.com/facebook/create-react-app/issues/9886#issuecomment-716157455
	"eslint.options": {
		"ignorePattern": ["!src/*"]
	},
	"typescript.tsserver.trace": "verbose",
	"emmet.includeLanguages": {
		"javascript": "javascriptreact"
	}
}
